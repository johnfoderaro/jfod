<!doctype html>
<html lang="en">
  {{> head }}
  <body>
    {{> navigation }}
    <main>
      <div class="container">
        {{{contents}}}
        <form id="contact-form">
          <label>Name</label>
          <input type="text" id="name" name="name">
          <label>Email</label>
          <input type="email" id="email" name="email">
          <label>Comment</label>
          <textarea rows="8" id="comment" name="comment"></textarea>
          <input type="text" name="topic" style="display:none"/>
          <button type="submit" id="submit" name="submit">Send</button>
          <p id="form-message"></p>
        </form>
      </div>
    </main>
  {{> footer }}
  {{> scripts }}
</body>
</html>
