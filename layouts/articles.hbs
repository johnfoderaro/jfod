{{>header}}
  <div class="container">
    <div class="main">
      {{{contents}}}
    </div>
    <div class="links articles">
      <h3>Latest articles</h2>
      <ul class="recent">
        {{#each (limit articles this.pagination.end this.pagination.start) }}
        <li><a href="/{{trimHtmlExt path}}/">{{title}}</a></li>
        {{/each}}
        {{#if this.pagination.next}}
        <li><strong><a href="/{{trimHtmlExt this.pagination.next.path}}/">Next</a></strong></li>
        {{/if}}
        {{#if this.pagination.prev}}
        <li><strong><a href="/{{trimHtmlExt this.pagination.prev.path}}/">Prev</a></strong></li>
        {{/if}}
      </ul>
    </div>
    <div class="links resources">
      <h3>Links and resources</h2>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about/">About</a></li>
        <li><a href="/resume.pdf">Resume</a></li>
        <li><a href="https://www.linkedin.com/in/jfoderaro/">LinkedIn</a></li>
        <li><a href="https://twitter.com/JohnFoderaro">Twitter</a></li>
        <li><a href="https://github.com/johnfoderaro">GitHub</a></li>
        <li><a href="https://www.npmjs.com/~johnfoderaro">npm</a></li>
      </ul>
    </div>
  </div>
{{>footer}}